<div class="background-div">
<p id="notice"><%= notice %></p>

<!-- <h1>Listing Adverts</h1> -->

<!-- home button -->

<button class="advert-index-home"> <%= link_to 'Home', root_path  %></button>


<% @adverts.each do |advert| %>
<div class="ad-preview-box">
  <dialog id="myDialog">This is a dialog window</dialog>
  <p class="advert-title-text"><%= advert.name %></p>
  <p><%= image_tag advert.avatar, :size => "500x350"  %></p>
  <p>Availability: <%= advert.availability %></p>

  <!-- Button trigger modal -->
   <button type="button" class="dash-button" data-toggle="modal" data-target="#myModal-<%= advert.id%>">
    info
   </button>
   
  <!-- Advert show page modal -->
  <div class="modal fade" id="myModal-<%= advert.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
           <h4 class="modal-title" id="myModalLabel"><%= advert.name %></h4>
   
        </div>
        <div class="modal-body">
           <p>Sector: <%= advert.sector %></p>
           <p>Address: <%= advert.address %></p>
           <p><%= image_tag advert.avatar, :size => "450x200" %></p>
           <p>Size: <%= advert.size %></p>
           <p>Facilities: <%= advert.facilities %></p>
           <p><% advert.seller_id %></p>
           <p>Times: <%= advert.date_time %></p>
           <p>Availability: <%= advert.availability %></p>
           <div class='bid-form'>
             <input type="number" id="new-bid-amount" class="new-bid-amount-<%= advert.id %>" placeholder="Enter bid...">
             <button class="submit-bid-button btn btn-default disabled" data-advert-id=<%= advert.id %>>Submit Bid</button>
           </div>
           </div>
       
        <div class="modal-footer">
          <% if user_signed_in? %> 
             <button class="new-bid">Make an offer</button>
          <% else %> 
            <class="dash-button"><%= link_to 'Make an offer', new_user_session_path %>
          <% end %>
        </div>
        <div class='bid-form'>      
          <button type="button" class="dash-button" data-dismiss="modal">Back</button>        
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 
</div>

